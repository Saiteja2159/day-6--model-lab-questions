#include<stdio.h>
int main()
{
    int a; 
    float tax;
    printf("enter your salary:");
    scanf("%d", &a);
    
    if(a<=150000)
    {
        printf( "no tax");
        
    }
    else if(a>=150001 && a<=300000)
    { 
        tax= a*0.10;
        printf("%f" , tax);
    }
    else if(a>=300001 && a<=500000)
    {
        tax= a*0.20;
        printf("%f" , tax);
        
    }
        
    else
    { 
        tax= a*0.30;
        printf("%f", tax);
    }    
}



TEST CASE 1
enter your salary:400700
80140.000000


TEST CASE 2
enter your salary:2789239
836771.687500

TEST CASE 3
enter your salary:150000
no tax

TEST CASE 4
enter your salary:00000
no tax

TEST CASE 5
enter your salary:-125486
no tax
